  email = markyspain421@gmail.com
  name = Mark Spain

[includeIf "gitdir:/Users/Mark.Spain/**"]
  path = ~/.gitconfig-work

[includeIf "gitdir:/mnt/c/Users/BB886QZ/**"]
  path = ~/.gitconfig-work

[includeIf "gitdir:C:/Users/BB886QZ/**"]
  path = ~/.gitconfig-work

[core]
  editor = vim

[init]
  defaultBranch = master

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[rerere]
  enabled = true

[push]
  default = current

[pull]
  rebase = false

[filter "media"]
  clean = git media clean %f
  smudge = git media smudge %f
  required = true

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[protocol]
  version = 2

[credential]
  helper = /usr/local/share/gcm-core/git-credential-manager
  credentialStore = gpg

[credential "https://dev.azure.com"]
  useHttpPath = true
