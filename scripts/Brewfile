#!/bin/bash
# ----------------------------------------------------------------------
# ~/.dotfiles/scripts/Brewfile
# Mark Spain
# ----------------------------------------------------------------------

# tap the repos
brew tap homebrew/cask
brew tap homebrew/cask-fonts

# install brew packages
brew install bash-completion@2
brew install cowsay
brew install fortune
brew install neofetch
brew install node
brew install p7zip
brew install pianobar
brew install tree
brew install vim
brew install wget

# install fonts
brew install font-source-code-pro

# install casks
casks = (
  appcleaner
  arduino
  bartender
  battle-net
  brave-browser
  caffeine
  docker
  dropbox
  google-chrome
  google-drive
  grandperspective
  intellij-idea
  iterm2
  istat-menus
  league-of-legends
  mqtt-explorer
# gemini
#  onyx
  nvidia-geforce-now
  plex
  steam
  sublime-text
  the-unarchiver
  transmission
  transmit
  visual-studio-code
  vlc
  vnc-server
  vnc-viewer
)

for cask in ${casks[*]}; do
  brew install --cask $cask
done
